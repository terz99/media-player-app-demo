<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.terz99.mediaplayerapp.MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/style_button"
            android:text="@string/backwards"
            android:id="@+id/backwards_button"/>

        <Button
            style="@style/style_button"
            android:text="@string/forwards"
            android:id="@+id/forwards_button"/>


    </LinearLayout>

    <Button
        style="@style/style_button"
        android:text="@string/start"
        android:id="@+id/button_start"/>

    <Button
        style="@style/style_button"
        android:text="@string/stop"
        android:id="@+id/button_stop"/>

    <Button
        style="@style/style_button"
        android:text="@string/pause"
        android:id="@+id/button_pause"/>

    <Button
        style="@style/style_button"
        android:text="@string/set_to_mid"
        android:id="@+id/button_set_to_mid"/>

    <TextView
        style="@style/textview_style"
        android:id="@+id/textview_volume"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/seekbar_volume"/>

</LinearLayout>
